<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/mainBG"
    tools:context="com.meha.myapp.InputActivity">

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:id="@+id/progressBar"
        android:layout_alignBottom="@+id/inputList"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Array so far :"
        android:fontFamily="sans-serif-condensed"
        android:id="@+id/inputList"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Size :"
        android:fontFamily="sans-serif-condensed"
        android:id="@+id/numText"
        android:layout_alignTop="@+id/inputView"
        android:layout_alignRight="@+id/progressBar"
        android:layout_alignEnd="@+id/progressBar" />

    <Button
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:text="00"
        android:fontFamily="sans-serif-condensed"
        android:id="@+id/inputView"
        android:textColor="@color/textGreen"
        android:textSize="20sp"
        android:background="@color/mainWhite"
        android:clickable="false"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="200dp"
        />


    <Button
        android:layout_width="50dp"
        android:layout_height="@dimen/abc_action_bar_progress_bar_size"
        android:text="1"
        android:fontFamily="sans-serif-condensed"
        android:id="@+id/one"
        android:textColor="@color/textGray"
        android:background="@drawable/buttonstyle"
        android:layout_below="@+id/inputView"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="200dp"
        android:onClick="button_1"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="@dimen/abc_action_bar_progress_bar_size"
        android:text="4"
        android:fontFamily="sans-serif-condensed"
        android:id="@+id/four"
        android:textColor="@color/textGray"
        android:background="@drawable/buttonstyle"
        android:layout_below="@+id/one"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="200dp"
        android:onClick="button_4"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="@dimen/abc_action_bar_progress_bar_size"
        android:text="7"
        android:fontFamily="sans-serif-condensed"
        android:id="@+id/seven"
        android:textColor="@color/textGray"
        android:background="@drawable/buttonstyle"
        android:layout_below="@+id/four"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="200dp"
        android:onClick="button_7"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="@dimen/abc_action_bar_progress_bar_size"
        android:text="DEL"
        android:fontFamily="sans-serif-condensed"
        android:id="@+id/del"
        android:textColor="@color/textGray"
        android:background="@drawable/buttonstyle"
        android:layout_below="@+id/seven"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="200dp"
        android:onClick="button_del"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="@dimen/abc_action_bar_progress_bar_size"
        android:text="2"
        android:fontFamily="sans-serif-condensed"
        android:id="@+id/two"
        android:textColor="@color/textGray"
        android:background="@drawable/buttonstyle"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/inputView"
        android:layout_toRightOf="@+id/one"
        android:layout_toEndOf="@+id/one"
        android:onClick="button_2"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="@dimen/abc_action_bar_progress_bar_size"
        android:text="5"
        android:fontFamily="sans-serif-condensed"
        android:id="@+id/five"
        android:textColor="@color/textGray"
        android:background="@drawable/buttonstyle"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/two"
        android:layout_toRightOf="@+id/four"
        android:layout_toEndOf="@+id/four"
        android:onClick="button_5"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="@dimen/abc_action_bar_progress_bar_size"
        android:text="8"
        android:fontFamily="sans-serif-condensed"
        android:id="@+id/eight"
        android:textColor="@color/textGray"
        android:background="@drawable/buttonstyle"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/five"
        android:layout_toRightOf="@+id/seven"
        android:layout_toEndOf="@+id/seven"
        android:onClick="button_8"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="@dimen/abc_action_bar_progress_bar_size"
        android:text="0"
        android:fontFamily="sans-serif-condensed"
        android:id="@+id/zero"
        android:textColor="@color/textGray"
        android:background="@drawable/buttonstyle"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/eight"
        android:layout_toRightOf="@+id/del"
        android:layout_toEndOf="@+id/del"
        android:onClick="button_0"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="@dimen/abc_action_bar_progress_bar_size"
        android:text="3"
        android:fontFamily="sans-serif-condensed"
        android:id="@+id/three"
        android:textColor="@color/textGray"
        android:background="@drawable/buttonstyle"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/inputView"
        android:layout_toRightOf="@+id/two"
        android:layout_toEndOf="@+id/two"
        android:onClick="button_3"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="@dimen/abc_action_bar_progress_bar_size"
        android:text="6"
        android:fontFamily="sans-serif-condensed"
        android:id="@+id/six"
        android:textColor="@color/textGray"
        android:background="@drawable/buttonstyle"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/two"
        android:layout_toRightOf="@+id/five"
        android:layout_toEndOf="@+id/five"
        android:onClick="button_6"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="@dimen/abc_action_bar_progress_bar_size"
        android:text="9"
        android:fontFamily="sans-serif-condensed"
        android:id="@+id/nine"
        android:textColor="@color/textGray"
        android:background="@drawable/buttonstyle"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/five"
        android:layout_toRightOf="@+id/eight"
        android:layout_toEndOf="@+id/eight"
        android:onClick="button_9"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="@dimen/abc_action_bar_progress_bar_size"
        android:text="ADD"
        android:fontFamily="sans-serif-condensed"
        android:id="@+id/add"
        android:textColor="@color/textGray"
        android:background="@drawable/buttonstyle"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/eight"
        android:layout_toRightOf="@+id/zero"
        android:layout_toEndOf="@+id/zero"
        android:onClick="button_add"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="@dimen/abc_action_bar_progress_bar_size"
        android:text="Auto Fill"
        android:fontFamily="sans-serif-condensed"
        android:id="@+id/autoFill"
        android:textColor="@color/textGray"
        android:background="@drawable/buttonstyle"
        android:onClick="autoFill"
        android:layout_alignTop="@+id/add"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>